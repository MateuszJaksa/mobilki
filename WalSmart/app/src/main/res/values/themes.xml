<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalSmart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/apricot</item>
        <item name="colorPrimaryVariant">@color/apricot</item>
        <item name="colorOnPrimary">@color/black_coffee</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/floral_white</item>
        <item name="colorSecondaryVariant">@color/alice_blue</item>
        <item name="colorOnSecondary">@color/black_coffee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/slate_grey</item>
        <item name="android:textColor">@color/black_coffee</item>
    </style>

    <style name="Theme.WalSmart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WalSmart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WalSmart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>