<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalSmart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/apricot</item>
        <item name="colorPrimaryVariant">@color/apricot</item>
        <item name="colorOnPrimary">@color/black_coffee</item>
        <item name="colorControlActivated">@color/toolbar_color</item>
        <item name="android:selectableItemBackgroundBorderless">@color/alice_blue</item>
        <item name="colorControlHighlight">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3F51B5</item>
        <item name="colorSecondaryVariant">@color/apricot</item>
        <item name="colorOnSecondary">@color/black_coffee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/cavollini</item>
        <item name="android:textColor">@color/black_coffee</item>
    </style>

    <style name="Theme.WalSmart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<style name="Theme.WalSmart.ImageButton" parent="Widget.AppCompat.ImageButton">
    <item name="android:height">30dp</item>
</style>

    <style name="Theme.WalSmart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WalSmart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/apricot</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/black_coffee</item>
    </style>
</resources>